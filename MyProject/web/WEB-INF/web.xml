<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.auth.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.auth.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewCourseByStudentController</servlet-name>
        <servlet-class>controller.grade.ViewCourseByStudentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewListStudentByLecturer</servlet-name>
        <servlet-class>controller.exam.ViewListStudentByLecturer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewStudent</servlet-name>
        <servlet-class>controller.exam.ViewStudent</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewCourseByStudentController</servlet-name>
        <url-pattern>/grade/student</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ViewCourseByLecturerController</servlet-name>
        <servlet-class>controller.exam.ViewCourseByLecturerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TakeExamController</servlet-name>
        <servlet-class>controller.exam.TakeExamController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewCourseByLecturerController</servlet-name>
        <url-pattern>/exam/lecturer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TakeExamController</servlet-name>
        <url-pattern>/exam/take</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewListStudentByLecturer</servlet-name>
        <url-pattern>/exam/liststudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewStudent</servlet-name>
        <url-pattern>/viewstudent</url-pattern>
    </servlet-mapping>
</web-app>
